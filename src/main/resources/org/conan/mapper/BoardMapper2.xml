<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
  <mapper namespace="org.conan.mapper.BoardMapper2">
 
  <select id="getList" resultType="org.conan.domain.BoardVO">
  <![CDATA[
  select * from t_cook_board where bno >0
  ]]>
  </select>
  <!-- getter setter 사용할 것 없이 가능 
  대소문자 구분 하니 똑같이 쓰기-->
  <insert id="insert">
  insert into tbl_board(bno, title, content, writer)
  values(seq_board.nextval,#{title},#{content},#{writer})
  </insert>
  
  <insert id="insertSelectKey">
  <selectKey keyProperty="bno" order="BEFORE"
  resultType="long">
  select seq_board.nextval from dual
  </selectKey>
  insert into tbl_board(bno, title, content, writer)
  values(#{bno},#{title},#{content},#{writer}) 
  </insert> 
  
  <select id="read" resultType="org.conan.domain.BoardVO">
  select * from t_cook_board where bno=#{bno}
  </select>
  
  <delete id="delete">
  delete from tbl_board where bno=#{bno}
  </delete>
  <update id="update">
  update tbl_board set title=#{title}, content=#{content}, updateDate=sysdate where bno=#{bno}
  </update>
  
  <!-- 반복적으로 쓰일 일이 있으면 sql문으로 만들기 -->
<sql id='criteria'>
   <trim prefix="(" suffix=")AND" prefixOverrides="OR">
         <foreach item='type' collection='typeArr'>
            <trim prefix='OR'>
               <choose>
                  <when test="type=='T'.toString()">title like '%'||#{keyword}||'%'</when>
                  <when test="type=='C'.toString()">content like '%'||#{keyword}||'%'</when>
                  <when test="type=='W'.toString()">writer like '%'||#{keyword}||'%'</when>
               </choose>
            </trim>
         </foreach>
      </trim>
   </sql>

   <select id="getListWithPaging"
      resultType="org.conan.domain.BoardVO">
<![CDATA[
select * from(
select /*+INDEX_DESC(t_cook_board pk_board)*/
rownum rn,bno,title,content,writer,regdate,updateDate
from 
t_cook_board
where
]]>
      <!-- <include refid='criteria'></include> -->
<![CDATA[ 
rownum <= #{pageNum} * #{amount}
)
where rn > (#{pageNum}-1) * #{amount}

]]>
   </select>

   <select id="getTotalCount" resultType="int">
      select count(*) from
      t_cook_board
      where 
      <include refid='criteria'></include>
      bno>0
   </select>


  </mapper> 

